<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Dark mode  -->
    <style name="SCREEN">
        <item name="android:background">@color/D_background_black</item>
        <item name="android:textColor">@color/D_text_white</item>
        <item name="android:textSize">24dp</item>
    </style>

    <!-- bottom Nav Bar design  -->
    <style name="NavBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textColor">@color/D_text_white</item>
        <item name="android:activatedBackgroundIndicator">@color/medium_blue</item>
        <!-- the 3 Icons may need to be modified here -->
    </style>

    <!-- Floating Action button style -->
    <style name="FAButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textColor">@color/D_text_white</item>
        <item name="android:colorControlActivated">@color/medium_blue</item>
        <!-- drop shadow -->
    </style>

    <!-- Statistic cards -->
    <!-- Card view containing image view and text view -->
    <style name="StatCards" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@color/D_secondary_black</item>
        <item name="android:textColor">@color/D_text_white</item>
    </style>

    <!-- todo: Statistics colors
    <style name="" patent="">
        <item name="android:textcolor">@color/L_background_white</item>
        <item name=" underline "></item>
        <item name=" bar color"></item>
    </style>
    -->

    <!-- Play/Pause Button -->
    <style name="PlayPauseButton" parent="Widget.Material3.MaterialTimePicker.ImageButton">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:colorControlActivated">@color/medium_blue</item>
    </style>

    <!-- end session button  -->
    <style name="EndSessionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@color/D_background_black</item>
        <item name="android:color">@color/sky_blue</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:colorControlActivated">@color/L_light_blue</item>
    </style>

    <!-- Headding trackmaster text -->


    <!-- track view -->
    <style name="trackView" parent="Widget.Material3.CardView.Filled">
        <item name="android:background">@color/D_secondary_black</item>
        <item name="android:textColor">@color/D_text_white</item>
        <!-- todo: dark blue highlighted headline text color
         <item name="">@color/L_dark_blue</item>
         -->
    </style>

    <!-- settings toggle -->
    <style name="settingsToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/medium_blue</item>
        <item name="android:colorAccent">@color/sky_blue</item>
    </style>



