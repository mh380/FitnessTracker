<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <item name="colorPrimary">@color/D_secondary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/D_text_white</item>

        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/L_text_black</item>
        <item name="android:textColor">@color/D_text_white</item>


        <item name="android:textSize">16sp</item>

        <item name="bottomNavigationStyle">@style/bottomNav</item>
        <item name="floatingActionButtonStyle">@style/floatAButton</item>
        <item name="buttonStyle">@style/playPause</item>
        <item name="switchStyle">@style/toggleButton</item>
        <item name="materialIconButtonOutlinedStyle">@style/endButton</item>



    </style>


    <!-- overall background sceen color, added to the parent layout element -->
    <style name="screenBackground" >
        <item name="android:background">@color/D_background_black</item>
    </style>

    <!-- text color change for the headding text at the top of the screen  -->
    <style name="textHighlight">
        <item name="android:textColor">@color/D_secondary_blue</item>
    </style>

    <!-- style for any kinds of view, only changes background color with theme -->
    <style name="viewStyle">
        <item name="android:background">@color/D_secondary_black</item>
    </style>

    <!-- unused styling for search view -->
    <style name="searchViewDesign">
        <item name="android:background">@color/D_secondary_black</item>
        <item name="android:textColor">@color/D_text_white</item>
    </style>


    <!-- bottom Nav Bar design -->
    <style name="bottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/D_secondary_blue</item>
        <item name="itemTextColor">@color/D_text_white</item>
        <item name="android:textSize">20sp</item>
        <item name="itemIconTint">@color/D_text_white</item>
        <item name="android:state_checked">@color/sky_blue</item>
    </style>

    <!-- active indicator pill shape color -->
    <style name= "activeIndicatorOnNavBar" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/medium_blue</item>
    </style>

    <!-- Floating Action button style -->
    <style name="floatAButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/D_secondary_blue</item>
        <item name="android:textAppearanceButton">@color/D_text_white</item>
        <item name="android:colorActivatedHighlight">@color/medium_blue</item>
        <!-- icon size -->
        <!-- drop shadow color? -->
    </style>

    <!-- Statistic cards -->
    <style name="statisticsFrag" parent="Widget.Material3.CardView.Elevated">
        <!-- todo: the fragment itself must contain the style elements:
         shadow
         corner radius -->
    </style>

    <!-- Play/Pause Button -->
    <style name="playPause" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/D_secondary_blue</item>
        <item name="android:colorControlActivated">@color/medium_blue</item>
    </style>

    <!--end session button -->
    <style name="endButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@color/D_background_black</item>
        <item name="android:color">@color/medium_blue</item>
        <item name="android:textColor">@color/medium_blue</item>
        <item name="android:colorControlActivated">@color/sky_blue</item>
    </style>


    <!--  todo: track view fragment style
    <style name="" parent="">
        <item name="">@color/D_secondary_black</item>
        <item name="android:textColor">@color/D_text_white</item>
         dark blue highlighted headline text color
         <item name="">@color/L_dark_blue</item>
    </style> -->


    <!-- settings toggle -->
    <style name="toggleButton" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="trackTint">@color/medium_blue</item>
        <item name="thumbTint">@color/dark_blue</item>
    </style>


    <!-- todo: Map color change? dark mode may be exclusive to google maps -->

</resources>