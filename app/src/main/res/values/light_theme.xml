    <!-- Play/Pause Button -->
    <style name="playPause" parent="Widget.MaterialComponents.Button">
        <item name="android:background"></item>
        <item name="android:colorControlActivated"></item>
    </style>

    <!--end session button -->
    <style name="endButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background"></item>
        <item name="android:color"></item>
        <item name="android:textColor"></item>
