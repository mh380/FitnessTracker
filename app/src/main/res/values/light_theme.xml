<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TrackMaster" parent="Base.Theme.TrackMaster" />

    <!-- Light mode  -->
    <style name="SCREEN">
        <item name="android:background">@color/L_background_white</item>
        <item name="android:textColor">@color/L_text_black</item>
    </style>

    <!-- bottom Nav Bar design  -->
    <style name="NavBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/L_medium_blue</item>
        <item name="android:textColor">@color/L_background_white</item>
        <item name="android:activatedBackgroundIndicator">@color/L_sky_blue</item>
        <!-- the 3 Icons may need to be modified here -->
    </style>

    <!-- Floating Action button style -->
    <style name="FAButton" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:background">@color/L_medium_blue</item>
        <item name="android:textColor">@color/L_background_white</item>
        <item name="android:colorControlActivated">@color/L_sky_blue</item>
        <!-- drop shadow -->
    </style>

    <!-- Statistic cards -->
    <!-- Card view containing image view and text view -->
    <style name="StatCards" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@color/L_background_white</item>
        <item name="android:textColor">@color/L_text_black</item>
    </style>

    <!-- todo: Statistics colors
    <style name="" patent="">
