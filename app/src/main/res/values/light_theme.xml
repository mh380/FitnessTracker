    <!-- Play/Pause Button -->
    <style name="PlayPauseButton" parent="Widget.Material3.MaterialTimePicker.ImageButton">
        <item name="android:background">@color/L_medium_blue</item>
        <item name="android:colorControlActivated">@color/L_sky_blue</item>
    </style>

    <!-- end session button  -->
    <style name="EndSessionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@color/L_background_white</item>
        <item name="android:color">@color/L_medium_blue</item>
        <item name="android:textColor">@color/L_medium_blue</item>
        <item name="android:colorControlActivated">@color/L_sky_blue</item>
    </style>

    <!-- Headding trackmaster text -->


    <!-- track view -->
    <style name="trackView" parent="Widget.Material3.CardView.Filled">
        <item name="android:background">@color/L_light_blue</item>
        <item name="android:textColor">@color/L_background_white</item>
        <!-- todo: dark blue highlighted headline text color
         <item name="">@color/L_dark_blue</item>
         -->
    </style>

    <!-- settings toggle -->
    <style name="settingsToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/L_light_blue</item>
        <item name="android:colorAccent">@color/L_powder_blue</item>
    </style>



