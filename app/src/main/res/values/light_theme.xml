    <!-- Floating Action button style -->
    <style name="floatAButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint"></item>
        <item name="android:textAppearanceButton"></item>
        <item name="android:colorActivatedHighlight"></item>
        <!-- icon size -->
        <!-- drop shadow color? -->
