<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrackMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/medium_blue</item>
        <item name="colorPrimaryVariant"></item>
        <item name="colorOnPrimary"></item>

        <item name="colorSecondary"></item>
        <item name="colorSecondaryVariant"></item>
        <item name="colorOnSecondary"></item>
        <item name="android:textColor"></item>

        <item name="android:textSize">32sp</item>

        <item name="bottomNavigationStyle">@style/bottomNav</item>
        <item name="floatingActionButtonStyle">@style/floatAButton</item>
        <item name="buttonStyle">@style/playPause</item>
        <!-- Fragment style insert -->
        <item name="switchStyle">@style/toggleButton</item>
        <item name="materialIconButtonOutlinedStyle">@style/endButton</item>
        <item name="android:textViewStyle">@style/headingText</item>


    </style>


